<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_id_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <include
        layout="@layout/activity_main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="118dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#501e1e1e"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <CheckBox
                android:layout_width="56dp"
                android:layout_height="59dp"
                android:background="@drawable/menus_auto_selector"
                android:button="@null" />

            <ImageView
                android:layout_width="98dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/dividingling" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <CheckBox
                android:id="@+id/menus_id_qiuckclock"
                android:layout_width="58dp"
                android:layout_height="60dp"
                android:background="@drawable/menus_quickclock_selector"
                android:button="@null" />

            <ImageView
                android:layout_width="98dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/dividingling" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <CheckBox
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/menus_nighttype_selector"
                android:button="@null" />

            <ImageView
                android:layout_width="98dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/dividingling" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <CheckBox
                android:id="@+id/menus_id_lock"
                android:layout_width="58dp"
                android:layout_height="69dp"
                android:background="@drawable/menus_lockclock_selector"
                android:button="@null" />

            <ImageView
                android:layout_width="98dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/dividingling" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <CheckBox
                android:id="@+id/menus_id_moresetting"
                android:layout_width="58dp"
                android:layout_height="52dp"
                android:background="@drawable/menus_more_selector"
                android:button="@null" />

            <ImageView
                android:layout_width="98dp"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/dividingling" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/menus_id_exit"
                android:layout_width="58dp"
                android:layout_height="62dp"
                android:background="@drawable/menus_exit_selector" />

        </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>
