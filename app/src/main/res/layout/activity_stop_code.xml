<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/addalarm_week_unselect"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/stop_code_clockbg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical"
        android:touchscreenBlocksFocus="true">

        <ImageView
            android:layout_width="159dp"
            android:layout_height="170dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/stop_clock" />

        <TextView
            android:id="@+id/stop_code_timetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/main_item_time"
            android:textColor="@color/white"
            android:textSize="48sp" />

        <TextView
            android:id="@+id/stop_code_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/code_msg"
            android:textColor="@color/white"
            android:textSize="17sp" />
    </LinearLayout>

    <Button
        android:id="@+id/stop_code_startbtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/stop_code_clockbg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/stop_code_start_selector"
        android:text="@string/code_msg2"
        android:textColor="@color/stop_btm" />

    <Button
        android:id="@+id/stop_code_exitbtn"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_below="@+id/stop_code_clockbg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:alpha="0.0"
        android:background="@drawable/stop_code_start_selector"
        android:enabled="false"
        android:text="@string/cancleAlarm"
        android:textColor="@color/stop_btm"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/stop_code_bg"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:layout_alignParentBottom="true"
        android:alpha="0.0"
        android:background="@android:color/white">


        <EditText
            android:id="@+id/stop_code_edittexi1"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:background="@drawable/stop_code_edit_bg"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/stop_texi1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/stop_code_edittexi1"
            android:layout_marginBottom="8dp"
            android:layout_toLeftOf="@id/stop_code_edittexi1"
            android:layout_toStartOf="@id/stop_code_edittexi1"
            android:paddingLeft="14dp"
            android:text="@string/code_codeMsg"
            android:textColor="@color/stop_text1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/stop_code_ok"
            android:layout_width="60dp"
            android:layout_height="36dp"
            android:layout_alignBottom="@id/stop_code_edittexi1"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/stop_code_edittexi1"
            android:background="@drawable/stop_code_ok_selector" />

        <TextView
            android:id="@+id/stop_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stop_code_edittexi1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/code_codeMsg2"
            android:textColor="@color/stop_text2"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/stop_code_codeview"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_below="@id/stop_text2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />

        <Button
            android:id="@+id/stop_code_change"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@id/stop_code_codeview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/stop_code_change_selector" />
    </RelativeLayout>

</RelativeLayout>