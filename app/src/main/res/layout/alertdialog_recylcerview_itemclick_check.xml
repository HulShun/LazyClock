<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/addalarm_popup_bg"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/recyclerview_check"
        android:textColor="@color/main_listselect_text"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/recyclerview_id_editAlarm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="23dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_list_check_ok"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:background="@drawable/main_list_check_ok"
            android:text="@string/ok"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/main_list_check_no"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/main_list_check_no"
            android:text="@string/cancel"
            android:textColor="@color/main_listselect_text"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>